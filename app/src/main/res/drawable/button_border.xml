<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 设置透明背景色 -->
    <solid android:color="@color/black" />
    <!-- 填充的颜色,渐变色 -->
    <gradient
        android:startColor= "@color/deepskyblue"
        android:centerColor="@color/white"
        android:endColor="@color/deepskyblue"
        android:angle="90" />

    <!-- 设置一个白色边框 -->
    <stroke
        android:width="2sp"
        android:color="@color/deepskyblue" />
    <!-- 设置四个圆角的半径 -->
    <corners
        android:bottomLeftRadius="5sp"
        android:bottomRightRadius="5sp"
        android:topLeftRadius="5sp"
        android:topRightRadius="5sp" />
    <!-- 设置一下边距,让空间大一点 -->
    <padding
        android:bottom="1sp"
        android:left="5sp"
        android:right="5sp"
        android:top="1sp" />

</shape> 